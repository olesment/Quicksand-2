@*model IEnumerable<KooliProjekt.Data.UserFundsTransaction>*@
@model KooliProjekt.Data.PagedResult<KooliProjekt.Data.UserFundsTransaction>

@{
    ViewData["Title"] = "Index";
}
<h2>Transactions</h2>

<p>
    <a asp-action="Deposit" class="btn btn-primary">Deposit</a>
    <a asp-action="Withdraw" class="btn btn-primary">Withdraw</a>
</p>
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FundID@*Html.DisplayNameFor(model => model.FundID)*@
            </th>
            <th>
                Amount @*Html.DisplayNameFor(model => model.Amount)*@
            </th>
            <th>
                TransaCtionDate @*Html.DisplayNameFor(model => model.TransactionDate)*@
            </th>
            <th>
                Transactiontype @*Html.DisplayNameFor(model => model.TransactionType)*@
            </th>
            <th>
               Comment @*Html.DisplayNameFor(model => model.Comment)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FundID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FundsTransactionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FundsTransactionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FundsTransactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@*Lisatud pager 19.11*@
@(await Component.InvokeAsync<PagerViewComponent>(new { result = Model, viewName = "Default" }))
